<div style="padding-left: 5em; padding-right: 5em ">
  <%= form_for @movie do |f| %>
    <% if @movie.errors.any? %>
      <div class="row">
        <div class="col-xs-12">
          <%= pluralize(@movie.errors.count, "error") %> prevented this movie from being submitted:
          <ul>
            <% @movie.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>
    <div class="row" style="padding-bottom: 1em">
      <div class="col-xs-12">
        <%= f.label :title %><br>
        <%= f.text_field :title, class: "form-control" %>
      </div>
    </div>
    <div class="row" style="padding-bottom: 1em">
      <div class="col-xs-4">
        <%= f.label :runtime_in_minutes, "Length" %><br>
        <%= f.number_field :runtime_in_minutes, class: "form-control" %>
      </div>
      <div class="col-xs-4">
        <%= f.label :director %><br>
        <%= f.text_field :director, class: "form-control" %>
      </div>
      <div class="col-xs-4">
        <%= f.label :release_date, "Release Date" %><br>
        <%= f.date_field :release_date, class: "form-control" %>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-3" style="vertical-align: middle">
        <%= f.label :image, "Movie Image", style: "padding-top: 2em" %><br>
        <%= f.file_field :image, class: "btn", style: "margin: auto" %>
      </div>
      <div class="col-xs-9">
        <%= f.label :description %><br>
        <%= f.text_area :description, class: "form-control", rows:"4" %>
      </div>
    </div>
    <div class="row" style="padding-top: 1em">
      <div class="col-xs-12">
        <%= f.submit "Submit", class: "btn btn-default" %> 
      </div>
    </div>
  <% end %>
</div>

