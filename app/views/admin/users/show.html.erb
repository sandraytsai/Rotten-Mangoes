<div class="container text-left">
  <div class="row">
    <div class="col-xs-8" style="margin-left: 3em">
      <h1><%= @admin_user.firstname %> <%= @admin_user.lastname %></h1>
      <h4>E-mail: <small><%= @admin_user.email %></small></h4>
      <h4>Created at: <small><%= @admin_user.created_at %></small></h4>
      <h4>Updated at: <small><%= @admin_user.updated_at %></small></h4>
      <h4>Admin: <small><% if @admin_user.admin %>Yes<% else %> No <% end %></small></h4>
      <button class="btn btn-default"><%= link_to 'Edit', edit_admin_user_path(@admin_user) %></button>
      <button class="btn btn-default"><%= link_to 'View As', impersonate_admin_user_path(@admin_user.id), method: :post %></button>
      <button class="btn btn-default"><%= link_to 'Back', admin_users_path %></button> 
    </div>
  </div>
</div>