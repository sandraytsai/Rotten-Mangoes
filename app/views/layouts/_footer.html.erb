 <footer>
 <hr>
  <small>
    <% if current_user %>
      Signed in as <%= current_user.full_name %> (<%= link_to "Log out", sessions_path("current"), method: :delete %>) | <%= link_to "Movies", "/" %>
    <% else %>
      <%= link_to "Log In", new_sessions_path %> | <%= link_to "Sign Up", new_user_path %>
    <% end %>
    <% if current_user && current_user.admin? %>
      | <%= link_to "Admin page", admin_users_path %>
    <% end %>
    <% if is_impersonating? %>
      | <%= link_to "Switch Back to Admin", unimpersonate_admin_users_path, method: :put %> 
    <% end %>
  </small>
</footer>